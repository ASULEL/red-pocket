<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.asule.redpocket.mapper.RedGrabMapper">

    <resultMap id="BaseResultMap" type="com.asule.redpocket.domain.RedGrab">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="redPocket" column="red_pocket" jdbcType="VARCHAR"/>
            <result property="amount" column="amount" jdbcType="DECIMAL"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,phone,red_pocket,
        amount,create_time
    </sql>

    <select id="randRedDetail" parameterType="INTEGER" resultType="RedDetail">
        SELECT
            *
        FROM
            red_detail
        WHERE
            record_id = #{redPocketId}
          AND is_active = 1
        ORDER BY
            rand()
            LIMIT 1
    </select>
</mapper>
